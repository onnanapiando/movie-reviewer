

<%= form_for([@movie, @movie.reviews.new]) do |f| %>


<div>
  <div id="star-rating"></div>
</div>



 
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
 $('#star-rating').raty( {

  path: '/assets/',
  scoreName: 'review[rating]'
 })

</script>