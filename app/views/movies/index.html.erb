<% end %>

<% @movies.each do |movie| %>

  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
    <%= image_tag movie.image.url(:medium) %>
      <div class="caption">
        <h3><center><%= movie.title %></center></h3>
        
        <%#= movie.duration %>
        <%#= movie.director %>



        <% if current_user %>
        <p><center><button><%= link_to 'Show', movie %></button>       
        <button><%= link_to 'Edit', edit_movie_path(movie) %></button>
        <button><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></button></center></p>
        <% else %>
        <p><center><button><%= link_to 'Show', movie %></button></center></p>
      <% end %> 

      </div>
    </div>
  </div>
    <% end %> 
<br>

<% if current_user %>

  <footer>
  <div class="container">
  <%= link_to 'New Movie', new_movie_path %>
  </div>
</footer>

<% end %>  

